.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.content-overlay {
  position: relative;
  z-index: 2;
  padding-top: calc(7vh + 88rpx + 12rpx);
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background: rgba(0, 0, 0, 0.3);
}

.page-hint {
  position: fixed;
  top: 7vh;
  left: 0;
  right: 0;
  width: 100%;
  height: 88rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  z-index: 10;
  border-bottom: 2rpx solid #fff;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 10rpx;
}

.page { padding: 16px; }
.publish { background: #fff; border-radius: 10px; padding: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); }
.input { border: 1px solid #eee; border-radius: 8px; padding: 10px; margin-bottom: 10px; }
.textarea { border: 1px solid #eee; border-radius: 8px; padding: 10px; min-height: 100px; }
.btn { margin-top: 10px; background: #07c160; color: #fff; border: none; border-radius: 8px; padding: 10px; }
.empty { color: #888; margin: 16px; text-align: center; }
.post { background: #fff; border-radius: 10px; padding: 12px; margin-top: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); }
.post-title { font-size: 16px; font-weight: 600; margin-bottom: 6px; }
.post-content { color: #333; white-space: pre-wrap; }
.divider { height: 1px; background: #f0f0f0; margin: 10px 0; }
.reply-title { font-size: 14px; color: #666; margin-bottom: 8px; }
.reply-item { font-size: 14px; color: #444; margin-bottom: 6px; }
.btn-secondary { background: #e6f7ff; color: #1677ff; border: none; border-radius: 8px; padding: 8px; }