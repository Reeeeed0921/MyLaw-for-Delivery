.container {
  position: relative;
  min-height: 100vh;
  background: #fff;
}

.page-hint {
  position: fixed;
  top: 7vh;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2329;
  background: #fff;
  border-bottom: 2rpx solid #e7e9ec;
  z-index: 10;
}

.content {
  padding: 24rpx;
  padding-top: calc(7vh + 88rpx + 20rpx);
  font-size: 28rpx;
  color: #3a3f47;
}