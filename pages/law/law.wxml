<view class="container">
  <view class="page-hint">普法知识</view>
  <view class="content">
    <swiper class="law-swiper" indicator-dots="true" autoplay="false" circular="false">
      <swiper-item>
        <scroll-view class="law-scroll" scroll-y="true">
          <view class="law-card">
            <view class="card-section">
              <view class="section-header">标题</view>
              <view class="section-body"><text class="section-text">{{knowledge.number}}</text></view>
            </view>
            <view class="card-section">
              <view class="section-header">原文</view>
              <view class="section-body"><text class="section-text pre">{{knowledge.law}}</text></view>
            </view>
            <view class="card-section">
              <view class="section-header">适用情况</view>
              <view class="section-body"><text class="section-text">{{knowledge.case}}</text></view>
            </view>
            <view class="card-section">
              <view class="section-header">相关法规</view>
              <view class="section-body">
                <view class="content-item" wx:for="{{knowledge.contents}}" wx:key="index">
                  <text class="section-text">{{item}}</text>
                </view>
              </view>
            </view>
          </view>
        </scroll-view>
      </swiper-item>
    </swiper>
  </view>
</view>