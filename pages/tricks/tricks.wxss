.container {
  position: relative;
  min-height: 100vh;
  background: #fff;
}

.page-hint {
  position: fixed;
  top: 7vh;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2329;
  background: #fff;
  border-bottom: 2rpx solid #e7e9ec;
  z-index: 10;
}

.content {
  padding: 24rpx;
  padding-top: calc(7vh + 88rpx + 20rpx);
  font-size: 28rpx;
  color: #3a3f47;
}

/* swiper 区域高度：避开顶部固定提示栏 */
.tips-swiper {
  width: 100%;
  height: 68vh;
}

/* 卡片样式 */
.card {
  margin: 24rpx;
  padding: 28rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2329;
  margin-bottom: 12rpx;
}

.card-content {
  padding-top: 8rpx;
  font-size: 26rpx;
  color: #3a3f47;
  line-height: 1.8;
  white-space: pre-wrap;
}

.empty {
  margin: 48rpx auto;
  text-align: center;
  color: #8a8f99;
  font-size: 28rpx;
}