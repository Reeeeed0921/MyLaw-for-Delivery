.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.content-overlay {
  position: relative;
  z-index: 2;
  padding-top: calc(7vh + 88rpx + 12rpx); /* 紧贴在 hint 横线下方 */
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start; /* 左对齐，让按钮贴左侧 */
  background: rgba(0, 0, 0, 0.3);
}

.page-hint {
  position: fixed;        /* 统一到固定定位 */
  top: 7vh;               /* 统一高度 */
  left: 0;
  right: 0;
  width: 100%;
  height: 88rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  z-index: 10;
  border-bottom: 2rpx solid #fff;
  display: flex;
  align-items: flex-end;   /* 和普及锦囊一致，文字贴近横线 */
  justify-content: center;
  padding-bottom: 10rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #ffffff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.content {
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

/* 小法宝助手入口按钮样式 */
.assistant-entry {
  width: 46%;               /* 宽度减半 → 面积约为四分之一 */
  min-height: 80rpx;        /* 高度减半 */
  margin-top: 12rpx;        /* 与横线的间距更紧凑 */
  background: #ffffff;
  border-radius: 50rpx;     /* 圆角按比例缩小 */
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  padding: 12rpx 14rpx;     /* 内边距减半 */
}

.assistant-entry--hover {
  opacity: 0.95;
}

.assistant-logo {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #f0f3f8;
  margin-right: 12rpx;      /* 间距缩小 */
}

.assistant-body {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.assistant-title {
  font-size: 24rpx;         /* 字号缩小 */
  font-weight: 600;
  color: #1f2329;
  margin-bottom: 8rpx;
}

.assistant-pill {
  display: inline-flex;
  align-items: center;
  background: #f7f8fa;
  border: 2rpx solid #e7e9ec;
  border-radius: 40rpx;     /* 圆角缩小 */
  padding: 8rpx 14rpx;      /* 内边距缩小 */
  color: #5a6270;
  white-space: nowrap;      /* 防止长文换行 */
}

.assistant-pill-text {
  font-size: 20rpx;         /* 字号缩小 */
}

.assistant-arrow {
  font-size: 24rpx;         /* 字号缩小 */
  margin-left: 12rpx;
  color: #8a8f99;
}

/* 快捷功能区：四个带 emoji 的项 */
.quick-actions {
  width: 100%;
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-start; /* 从左到右排列 */
  align-items: stretch;
  gap: 20rpx; /* 增加横向间距（支持 gap 时生效） */
}

.action-item {
  /* 当 gap 不被支持时，用 margin-right 做回退 */
  margin-right: 20rpx;
  /* 计算每项宽度，预留 3 处 20rpx 的间距 */
  width: calc((100% - 60rpx) / 4);
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
  padding: 20rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

/* 去除最后一项的右间距（gap 不支持时） */
.quick-actions .action-item:last-child {
  margin-right: 0;
}

/* 分割横线与标签 */
.section-divider {
  width: 100%;
  display: flex;
  align-items: center;
  margin: 18rpx 0 12rpx;
}

.section-line {
  flex: 1;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.65);
}

.section-label {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  margin: 0 16rpx;
  white-space: nowrap;
}

/* 推荐律师滚动区域 */
.lawyer-scroll {
  flex: 1;            /* 占据剩余空间，实现内部滚动 */
  width: 100%;
  margin-top: 6rpx;
}

.lawyer-list {
  padding-bottom: 40rpx; /* 让最后一项不贴底 */
}

.lawyer-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
  padding: 24rpx;
  margin-bottom: 16rpx;
  color: #1f2329;
  font-size: 26rpx;
}

.action-item--hover {
  opacity: 0.96;
}

.action-emoji {
  font-size: 48rpx;
  line-height: 1;
  margin-bottom: 12rpx;
}

.action-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e80ff; /* 与示例一致偏蓝 */
}

.action-label-sub {
  font-size: 22rpx;
  color: #5a6270;
  margin-top: 6rpx;
}